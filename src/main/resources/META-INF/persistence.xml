		<class>br.edu.unifei.ecot13.greciaAntiga.Comunidade</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.Espartano</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.Eupatrida</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.Guerra</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.HomemAdulto</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.LigaDelos</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.LigaPeloponeso</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.Medicas</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.Peloponeso</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.Persa</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.Pessoa</class>
		<class>br.edu.unifei.ecot13.greciaAntiga.PolisGrega</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/guilherme?useTimezone=true&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="guilherme"/>
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="guilherme"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="javax.persistence.schema-generation.database.action" value="none"/>
        </properties>
    </persistence-unit>
</persistence>
